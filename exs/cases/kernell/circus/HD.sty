% Haemodialysis macro definitions
%
\def\HMCS#1{[HMCS{#1}]}
\def\R#1{\textbf{R-{#1}}}
\def\SS#1{\textbf{S-{#1}}}
\def\hateq{\widehat{=}}

% four-column  definition array
\def\RLEQNS#1{
\[
\begin{array}{rcll}
#1
\end{array}
\]
}
%two-column
\def\FCOL#1{
\[
\begin{array}{l|l}
#1
\end{array}
\]
}
% two-column definition array
\def\LREQS#1{
\[
\begin{array}{lr}
#1
\end{array}
\]
}

% comments
\def\comment#1{\quad\mbox{\color{red} --- {#1}}}

\def\QUOTE#1{\textsf{``{#1}''}}
\def\alt{\mid}
\def\descr#1{\textrm{ --- {#1}}}
\def\say#1{\textrm{``#1''}}
\def\defs{\mathrel{\widehat=}}

%
% CSP
%
\def\pname#1{\textrm{#1}}
\def\Chaos{\pname{Chaos}}
\def\Stop{\pname{Stop}}
\def\Skip{\pname{Skip}}
\def\then{\rightarrow}
\def\seq{\mathbin;}
\def\ic{\mathbin\sqcap}
\def\ec{\mathbin\square}
\def\hide{\mathbin\backslash}
\def\lfp{\mu}
%\def\of{\mathrel\bullet}
\def\guardp#1{{#1}\&}
\def\pgrd{\mathrel{\textbf{\&}}}


\def\Seq{\mathop{\large\seq}}
\def\IC{\mathop{\large\ic}}
\def\EC{\mathop{\large\ec}}

% parenthesis array
\def\pararr#1{\left(\begin{array}{l}#1\end{array}\right)}

% guards
\def\guard{{}\textbf{\&\!}{}}
\def\guardc#1#2{\pararr{#1}~\guard~#2}% \guard{g}{A} -> (g) \& A

% timeout
\def\timeout#1{\overset{#1}{\bigtriangleup}}
